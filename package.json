  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun run scripts/build.ts",
    "db:generate": "drizzle-kit generate --dialect postgresql --schema ./src/db/schema.ts",
    "dev": "bun run --watch --env-file=.env src/index.ts",
    "dev:worker": "bun run --watch --env-file=.env src/workers/index.ts",
    "start": "prisma migrate deploy && bun run src/index.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "0.4.3",
    "@prisma/client": "6.5.0",
    "bullmq": "5.45.2",
    "dayjs": "1.11.13",
    "hono": "4.7.5",
    "ioredis": "5.6.0",
    "lodash-es": "4.17.21",
    "ms": "2.1.3",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0",
    "web-push": "3.6.7",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@types/bun": "1.2.8",
    "@types/lodash-es": "4.17.12",
    "@types/ms": "2.1.0",
    "@types/web-push": "3.6.4",
    "prettier": "3.5.3",
    "prisma": "6.5.0",
    "typescript": "5.8.2"
  }
}
