{
  "name": "signal",
  "version": "1.0.0",
  "description": "Event notification system with web push",
  "homepage": "https://github.com/xg4/signal#readme",
  "bugs": {
    "url": "https://github.com/xg4/signal/issues"
  },
  "repository": {
